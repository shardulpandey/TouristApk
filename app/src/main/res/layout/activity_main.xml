<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/delhi"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/delhi" />


    <TextView
        android:id="@+id/rashTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="227dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Rashtrapati Bhawan"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/redfortTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="391dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Red Fort"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/indiagate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="473dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="India Gate"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qutub"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/indiagate"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="-4dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="Qutub Minar"
        android:textSize="21sp"
        android:textStyle="bold" />


</RelativeLayout>